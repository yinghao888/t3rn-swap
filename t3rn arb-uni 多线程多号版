import threading
import random

# === å¯è‡ªå®šä¹‰å‚æ•° ===
ACCOUNTS = [
    {"private_key": "", "name": "è´¦æˆ·1"},
    {"private_key": "", "name": "è´¦æˆ·2"},
    {"private_key": "", "name": "è´¦æˆ·3"},
    {"private_key": "", "name": "è´¦æˆ·4"},
]
AMOUNT_ETH = 3.5  # æ¯æ¬¡è·¨é“¾é‡‘é¢ï¼ˆå•ä½ï¼šETHï¼‰
PAUSE_DURATION = 120  # ä½™é¢ä¸è¶³æ—¶æš‚åœæ—¶é—´ï¼ˆç§’ï¼‰

# RPC åœ°å€åˆ—è¡¨
UNI_RPC_URLS = [
    "https://unichain-sepolia.drpc.org",
    "https://sepolia.unichain.org",
    "https://unichain-sepolia-rpc.publicnode.com",
    "https://endpoints.omniatech.io/v1/unichain/sepolia/public",
