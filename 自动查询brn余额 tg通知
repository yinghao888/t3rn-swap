# è¿æ¥åˆ° Caldera åŒºå—é“¾
print("å°è¯•è¿æ¥åˆ°åŒºå—é“¾...")
w3 = Web3(Web3.HTTPProvider(RPC_URL))
if not w3.is_connected():
    raise Exception("æ— æ³•è¿æ¥åˆ° Caldera åŒºå—é“¾ RPC")
print("åŒºå—é“¾è¿æ¥æˆåŠŸ")

# æŸ¥è¯¢æ€»ä½™é¢çš„å‡½æ•°
def get_total_balance():
    total_balance = 0
    for account in ACCOUNTS:
        try:
            balance_wei = w3.eth.get_balance(account)
            balance = w3.from_wei(balance_wei, 'ether')
            total_balance += balance
        except Exception as e:
            print(f"æŸ¥è¯¢è´¦æˆ· {account} å¤±è´¥: {str(e)}")
    print(f"å½“å‰æ€»ä½™é¢: {total_balance}")
    return total_balance

# å‘é€ Telegram æ¶ˆæ¯çš„å¼‚æ­¥å‡½æ•°
async def send_balance_update(bot, previous_balance, interval_count, start_time):
    print(f"ç¬¬ {interval_count} æ¬¡æ›´æ–°å¼€å§‹")
    current_balance = get_total_balance()
    difference = float(current_balance - (previous_balance or 0)) if previous_balance is not None else 0
    
    # æ¯1åˆ†é’Ÿã€10åˆ†é’Ÿå’Œ60åˆ†é’Ÿå‘é€æ¶ˆæ¯
    if interval_count % 60 == 0:  # æ¯3600ç§’ï¼ˆ60åˆ†é’Ÿï¼‰
        interval = "60åˆ†é’Ÿ"
    elif interval_count % 10 == 0:  # æ¯600ç§’ï¼ˆ10åˆ†é’Ÿï¼‰
        interval = "10åˆ†é’Ÿ"
    else:  # æ¯60ç§’ï¼ˆ1åˆ†é’Ÿï¼‰
        interval = "1åˆ†é’Ÿ"
    
    message = f"ğŸ“Š {SYMBOL} æ€»ä½™é¢æ›´æ–° ({time.strftime('%Y-%m-%d %H:%M:%S')}):\n"
    message += f"å½“å‰æ€»ä½™é¢: {current_balance:.4f} {SYMBOL}\n"
    message += f"{interval}å¢é•¿: {difference:+.4f} {SYMBOL}"
    
    print(f"å°è¯•å‘é€æ¶ˆæ¯: {message}")
    try:
        await bot.send_message(chat_id=CHAT_ID, text=message, parse_mode='Markdown')
        print("æ¶ˆæ¯å‘é€æˆåŠŸ")
    except Exception as e:
        print(f"æ¶ˆæ¯å‘é€å¤±è´¥: {str(e)}")
    
    return current_balance

# ä¸»å¾ªç¯
async def main():
    print("å¯åŠ¨ Telegram Bot...")
    bot = Bot(TELEGRAM_TOKEN)
    app = Application.builder().token(TELEGRAM_TOKEN).build()
    print("Bot åˆå§‹åŒ–å®Œæˆ")

    previous_balance = None
    interval_count = 0
    start_time = time.time()
    
    while True:
        interval_count += 1
        previous_balance = await send_balance_update(bot, previous_balance, interval_count, start_time)
        print(f"ç­‰å¾…ä¸‹ä¸€æ¬¡æ›´æ–°...")
        await asyncio.sleep(60)  # æ¯60ç§’æ›´æ–°ä¸€æ¬¡

if __name__ == "__main__":
    asyncio.run(main())
