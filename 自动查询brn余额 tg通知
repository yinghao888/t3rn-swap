# è¿æ¥åˆ° Caldera åŒºå—é“¾
print("å°è¯•è¿æ¥åˆ°åŒºå—é“¾...")
w3 = Web3(Web3.HTTPProvider(RPC_URL))
if not w3.is_connected():
    raise Exception("æ— æ³•è¿æ¥åˆ° Caldera åŒºå—é“¾ RPC")
print("åŒºå—é“¾è¿æ¥æˆåŠŸ")

# æŸ¥è¯¢æ€»ä½™é¢çš„å‡½æ•°
def get_total_balance():
    total_balance = 0
    for account in ACCOUNTS:
        try:
            balance_wei = w3.eth.get_balance(account)
            balance = w3.from_wei(balance_wei, 'ether')
            total_balance += balance
        except Exception as e:
            print(f"æŸ¥è¯¢è´¦æˆ· {account} å¤±è´¥: {str(e)}")
    print(f"å½“å‰æ€»ä½™é¢: {total_balance}")
    return total_balance

# æ ¼å¼åŒ–æ—¶é—´
def format_time(seconds):
    hours = int(seconds // 3600)
    minutes = int((seconds % 3600) // 60)
    secs = int(seconds % 60)
    return f"{hours}å°æ—¶ {minutes}åˆ†é’Ÿ {secs}ç§’"

# å‘é€ Telegram æ¶ˆæ¯çš„å¼‚æ­¥å‡½æ•°
async def send_balance_update(bot, previous_balance, interval_count, start_time, initial_balance):
    print(f"ç¬¬ {interval_count} æ¬¡æ›´æ–°å¼€å§‹")
    current_balance = get_total_balance()
    elapsed_time = time.time() - start_time
    difference = float(current_balance - (previous_balance or 0)) if previous_balance is not None else 0
    total_increase = float(current_balance - initial_balance) if initial_balance is not None else 0
    
    # è®¡ç®—æ¯åˆ†é’Ÿå¹³å‡å¢åŠ é‡ï¼ˆæ¯30ç§’æ›´æ–°ï¼Œæ‰€ä»¥è¦é™¤ä»¥0.5åˆ†é’Ÿï¼‰
    avg_per_minute = total_increase / (elapsed_time / 60) if elapsed_time > 0 else 0
    # 24å°æ—¶é¢„ä¼°æ”¶ç›Šï¼ˆ24å°æ—¶ = 1440åˆ†é’Ÿï¼‰
    estimated_24h = avg_per_minute * 1440
    
    message = f"ğŸ“Š {SYMBOL} æ€»ä½™é¢æ›´æ–° ({time.strftime('%Y-%m-%d %H:%M:%S')}):\n"
    message += f"å½“å‰æ€»ä½™é¢: {current_balance:.4f} {SYMBOL}\n"
    message += f"å‰ä¸€åˆ†é’Ÿå¢åŠ : {difference:+.4f} {SYMBOL}\n"
    message += f"å†å²æ€»å…±å¢åŠ : {total_increase:+.4f} {SYMBOL}\n"
    message += f"æ€»å…±è¿è¡Œæ—¶é—´: {format_time(elapsed_time)}\n"
    message += f"æ¯åˆ†é’Ÿå¹³å‡å¢åŠ : {avg_per_minute:.4f} {SYMBOL}\n"
    message += f"24å°æ—¶é¢„ä¼°æ”¶ç›Š: {estimated_24h:+.4f} {SYMBOL}"
    
    print(f"å°è¯•å‘é€æ¶ˆæ¯: {message}")
    try:
        await bot.send_message(chat_id=CHAT_ID, text=message, parse_mode='Markdown')
        print("æ¶ˆæ¯å‘é€æˆåŠŸ")
    except Exception as e:
        print(f"æ¶ˆæ¯å‘é€å¤±è´¥: {str(e)}")
    
    return current_balance

# ä¸»å¾ªç¯
async def main():
    print("å¯åŠ¨ Telegram Bot...")
    bot = Bot(TELEGRAM_TOKEN)
    app = Application.builder().token(TELEGRAM_TOKEN).build()
    print("Bot åˆå§‹åŒ–å®Œæˆ")

    previous_balance = None
    interval_count = 0
    start_time = time.time()
    initial_balance = get_total_balance()  # è®°å½•åˆå§‹ä½™é¢
    
    while True:
        interval_count += 1
        previous_balance = await send_balance_update(bot, previous_balance, interval_count, start_time, initial_balance)
        print(f"ç­‰å¾…ä¸‹ä¸€æ¬¡æ›´æ–°...")
        await asyncio.sleep(30)  # æ¯30ç§’æ›´æ–°ä¸€æ¬¡

if __name__ == "__main__":
    asyncio.run(main())
